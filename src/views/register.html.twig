{% extends 'layouts/blog.html.twig' %}

{% block main %}
    <div class="bg-body m-3 p-5 rounded shadow-sm">
        {% if session().hasFlash('error') %}
            <div class="alert alert-danger">
                <ul class="m-0">
                    {% for error in session().getFlash('error') %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        {% if session().hasFlash('success') %}
            <div class="alert alert-success">
                {{ session().getFlash('success')[0] }}
            </div>
        {% endif %}
        <form method="post" action="/register">
            <div class="mb-3">
                <label for="name" class="form-label">Имя</label>
                <input name="name" value="Василий Пупкин" placeholder="Василий Пупкин" type="text" class="form-control" id="name">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">E-mail</label>
                <input name="email" value="vp11102022@gmail.com" placeholder="vp11102022@gmail.com" type="text" class="form-control" id="email">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Пароль</label>
                <input name="password" value="123123123" type="password" class="form-control" id="password">
            </div>
            <div class="mb-3">
                <label for="password_confirmation" class="form-label">Подтверждение пароля</label>
                <input name="password_confirmation" value="123123123" type="password" class="form-control" id="password_confirmation">
            </div>
            <button type="submit" class="btn btn-primary">Продолжить</button>
        </form>
    </div>
{% endblock %}
